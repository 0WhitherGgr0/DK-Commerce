@{
    ViewBag.Title = "Producto - Editar";
}
@section Styles {
    <link href="~/views/producto/editar.css" rel="stylesheet" />
}
<form id="EditarFrm">
    <button id="GuardarBtn" type="button">Guardar</button>

    <br />
    <br />
    <label for="CodigoTxt">Código</label>
    <input id="CodigoTxt" type="text" value="@ViewBag.IdProducto" readonly="readonly" />

    <br />
    <label for="NombreTxt">Nombre</label>
    <input id="NombreTxt" type="text" value="@ViewBag.Nombre" />

    <br />
    <label for="PrecioTxt">Precio</label>
    <input id="PrecioTxt" type="number" value="@ViewBag.Precio" />
</form>
@section Scripts {
    <script src="~/views/producto/editar.js"></script>
}